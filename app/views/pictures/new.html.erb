<%= form_tag pictures_url, :method => "post" do %>

   <%= label_tag :url, "URL:" %>
   <%= text_field_tag :url %>

   <%= label_tag :title, "Title:" %>
   <%= text_field_tag :title %>

   <%= submit_tag "Add Picture!"%>

   <%= label_tag :note, "Note:" %>
   <%= text_field_tag :note %>
   
<%= link_to "or Cancel", pictures_url %>
 <% end %>