<%= link_to "Add a New Picture", new_picture_path %>

<p>
  Here are some of my favorite photos
</p>

<ul>
<% @pictures.each do |p| %>
  <li>
    <%= link_to image_tag(p.url, :width => 60), picture_path(p.id) %>
    <p><%= p.title %><p>
    <nav>
      <%= link_to 'Details', picture_url(p.id) %>
      |
      <%= link_to 'Edit', edit_picture_url(p.id)  %>
      |
      <%= link_to 'Delete', picture_url(p.id), :method => 'delete', :confirm => 'Whoa, are you sure?'  %>
    </nav>
  </li>
<% end %>
</ul>
