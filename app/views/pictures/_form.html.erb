<% if @picture.errors.messages.any? %>
  <ul>
    <% @picture.errors.messages.each do |key, value| %>
      <li>The <%= key %> column <%= value.first %>.</li>
    <% end %>
  </ul>
<% end %>

<%= form_for @picture do |f| %>
  <%= f.label :url, "URL:" %>
  <%= f.text_field :url %>
  
  <%= f.label :title, "Title:" %>
  <%= f.text_field :title %>
  
  <%= f.submit %>
<% end %>